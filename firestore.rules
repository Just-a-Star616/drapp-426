rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Applications - users can only access their own, admins can access all
    match /applications/{applicationId} {
      allow read: if request.auth != null &&
                     (request.auth.uid == applicationId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == applicationId;
      allow update: if request.auth != null &&
                       (request.auth.uid == applicationId || isAdmin());
      allow delete: if isAdmin();
    }

    // Admins collection - authenticated users can check if they are admin
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
      allow write: if false; // Manually managed only via Firebase Console
    }

    // Configs - public read, admin write
    match /configs/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // FCM Tokens - users can manage their own, admins can read all
    match /fcmTokens/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Activity Logs - anyone authenticated can create, admins can read all, users can read their own
    match /activityLogs/{logId} {
      allow read: if request.auth != null &&
                     (isAdmin() || resource.data.applicationId == request.auth.uid);
      allow create: if request.auth != null &&
                       request.resource.data.keys().hasAll(['applicationId', 'applicantName', 'applicantEmail', 'timestamp', 'activityType', 'actor', 'actorId', 'actorName', 'details']) &&
                       request.resource.data.timestamp is number &&
                       request.resource.data.applicationId is string &&
                       request.resource.data.actorId == request.auth.uid; // Must be logging their own actions
      allow update, delete: if false; // Logs are immutable once created
    }

    // Scheduled Notifications - admins only
    match /scheduledNotifications/{notificationId} {
      allow read, write: if isAdmin();
    }
  }
}
